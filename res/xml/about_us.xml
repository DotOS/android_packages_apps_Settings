<PreferenceScreen
xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/dot_about_info">

<PreferenceCategory
              android:key="about"
              android:title="@string/dev_info" >

        <Preference
    android:summary="@string/dot_about_info_summary" >
            <intent
               android:action="android.intent.action.VIEW"
               android:data="https://www.droidontime.com/" />
      </Preference>

        <Preference
            android:title="@string/github"
    android:summary="@string/github_description"
    android:icon="@drawable/ic_github" >
    <intent
               android:action="android.intent.action.VIEW"
               android:data="http://github.com/dotOS" />
        </Preference>

        <Preference
            android:title="@string/gplus"
    android:summary="@string/gplus_description"
    android:icon="@drawable/ic_gplus" >
    <intent
               android:action="android.intent.action.VIEW"
               android:data="https://plus.google.com/communities/101137692192340076065" />
        </Preference>

        <Preference
            android:title="@string/telegram"
    android:summary="@string/telegram_description"
    android:icon="@drawable/ic_telegram" >
    <intent
               android:action="android.intent.action.VIEW"
               android:data="https://telegram.me/dotos" />
        </Preference>
		
		<Preference
            android:title="@string/telegram_channel"
    android:summary="@string/telegram_channel_description"
    android:icon="@drawable/ic_broadcast" >
    <intent
               android:action="android.intent.action.VIEW"
               android:data="https://t.me/dotOSchannel" />
        </Preference>

        <Preference
            android:title="@string/web"
    android:summary="@string/web_description"
    android:icon="@drawable/ic_downloads" >
    <intent
               android:action="android.intent.action.VIEW"
               android:data="https://download.droidontime.com/" />
        </Preference>

        <Preference
            android:title="@string/help_translate"
    android:summary="@string/help_translate_description"
    android:icon="@drawable/ic_trans" >
    <intent
               android:action="android.intent.action.VIEW"
               android:data="https://translations.droidontime.com" />
        </Preference>

        <Preference
            android:title="@string/walls"
    android:summary="@string/walls_description"
    android:icon="@drawable/ic_walls" >
    <intent
               android:action="android.intent.action.VIEW"
               android:data="http://dotos.imgur.com/" />
        </Preference>

     </PreferenceCategory>

<PreferenceCategory
              android:key="maintainers"
              android:title="@string/maintainers" >

        <Preference
        android:key="maintainers_fragment"
        android:title="@string/maintainers_title"
 	android:summary="@string/maintainers_summary"
        android:fragment="com.android.settings.Maintainers" />

</PreferenceCategory>

</PreferenceScreen>
