<resources>
	<declare-styleable name="Themes">
        <attr name="waveViewStyle" format="reference"/>
    </declare-styleable>
    <style name="BatteryEntityHeader">
        <item name="android:background">?android:attr/colorPrimaryDark</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    <declare-styleable name="DeviceCardView">
        <attr name="extra_title" format="string|reference"/>
    </declare-styleable>

    <style name="DotPreferenceFullCard">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/dot_pref_full</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="DotPreferenceTopCard">
        <item name="android:layout_marginBottom">-1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/dot_pref_top</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="DotPreferenceMiddleCard">
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_marginBottom">-1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/dot_pref_middle</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="DotPreferenceBottomCard">
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/dot_pref_bottom</item>
        <item name="android:clipToPadding">false</item>
    </style>
</resources>  