<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/about_device_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/avatar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/avatar_icon"
                android:layout_width="72dp"
                android:layout_height="72dp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/google_sans"
            android:textSize="20sp" />

        <com.android.settings.dot.TabLayout
            android:id="@+id/system_Sections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Widget.Design.TabLayout"
            app:tabGravity="fill"
            app:tabIndicator="@drawable/material_tab_indicator"
            app:tabIndicatorFullWidth="false"
            app:tabMinWidth="112dp"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/MaterialTabComponent">

            <com.android.settings.dot.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_software" />

            <com.android.settings.dot.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_status" />

            <com.android.settings.dot.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_other" />
        </com.android.settings.dot.TabLayout>

    </LinearLayout>
            
</LinearLayout>